<Window x:Class="D2RExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:D2RExtractor.Converters"
        Title="D2R File Extractor"
        Icon="Resources/app.ico"
        Width="950" Height="680"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityConverter x:Key="InvBoolToVis" Invert="True"/>
        <conv:ProgressToStringConverter x:Key="ProgressToStr"/>

        <!-- ── Colour palette ── -->
        <SolidColorBrush x:Key="AccentBrush"   Color="#C8A951"/>  <!-- D2 gold -->
        <SolidColorBrush x:Key="DangerBrush"   Color="#C0392B"/>
        <SolidColorBrush x:Key="SuccessBrush"  Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningBrush"  Color="#D4782A"/>  <!-- partial / orange -->
        <SolidColorBrush x:Key="SurfaceBrush"  Color="#252525"/>
        <SolidColorBrush x:Key="Surface2Brush" Color="#2E2E2E"/>
        <SolidColorBrush x:Key="TextBrush"     Color="#E0E0E0"/>
        <SolidColorBrush x:Key="MutedBrush"    Color="#888888"/>

        <!-- ── Base button style ── -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground"   Value="{StaticResource TextBrush}"/>
            <Setter Property="Background"   Value="{StaticResource Surface2Brush}"/>
            <Setter Property="BorderBrush"  Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding"      Value="12,5"/>
            <Setter Property="FontSize"     Value="12"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#383838"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.35"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"  Value="#4A3A10"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground"  Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A4A18"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"  Value="#3A1010"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Foreground"  Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A1818"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── Column header style ── -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background"   Value="{StaticResource Surface2Brush}"/>
            <Setter Property="Foreground"   Value="{StaticResource MutedBrush}"/>
            <Setter Property="BorderBrush"  Value="#333"/>
            <Setter Property="Padding"      Value="8,4"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="FontSize"     Value="11"/>
        </Style>

        <!-- ── ListViewItem style ── -->
        <Style TargetType="ListViewItem">
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="Foreground"       Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness"  Value="0,0,0,1"/>
            <Setter Property="BorderBrush"      Value="#333"/>
            <Setter Property="Padding"          Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <GridViewRowPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="*"/>       <!-- Installation list -->
            <RowDefinition Height="Auto"/>    <!-- Toolbar -->
            <RowDefinition Height="180"/>     <!-- Log panel -->
        </Grid.RowDefinitions>

        <!-- ══ Header ══ -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
        <TextBlock x:Name="VersionLabel"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Foreground="{StaticResource MutedBrush}" FontSize="11"/>
        <StackPanel>
            <TextBlock Text="D2R File Extractor"
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}"/>
            <TextBlock Text="Extract D2R CASC archives for faster load times. Add your D2R installation folders below."
                       FontSize="11" Foreground="{StaticResource MutedBrush}" Margin="0,2,0,6"/>

            <!-- Launch command reminder -->
            <Border Background="#1E2A1E" BorderBrush="#3A5A3A" BorderThickness="1" CornerRadius="3" Padding="10,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="After extraction, add these flags to D2R.exe's launch options: "
                               FontSize="11" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="-direct -txt"
                               FontSize="11" FontWeight="SemiBold" FontFamily="Consolas, Courier New"
                               Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="  (remove them after undoing the extraction to run D2R normally again)"
                               FontSize="11" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
        </Grid>

        <!-- ══ Installation list ══ -->
        <Border Grid.Row="1" BorderBrush="#333" BorderThickness="1" CornerRadius="4"
                Background="{StaticResource SurfaceBrush}">
            <ListView x:Name="InstallationsList"
                      Background="Transparent"
                      BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <ListView.View>
                    <GridView>
                        <!-- Name column -->
                        <GridViewColumn Header="Name" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{StaticResource TextBrush}"
                                               VerticalAlignment="Center"
                                               Padding="8,0,4,0"
                                               ToolTip="{Binding FolderPath}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Path column -->
                        <GridViewColumn Header="Folder Path" Width="280">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FolderPath}"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Padding="4,0"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FolderPath}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Status column -->
                        <GridViewColumn Header="Status" Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Margin="4,6">
                                        <!-- Idle: show text status -->
                                        <TextBlock Visibility="{Binding IsIdle, Converter={StaticResource BoolToVis}}"
                                                   Text="{Binding StatusText}"
                                                   VerticalAlignment="Center"
                                                   FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExtracted}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsPartiallyExtracted}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsQueued}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Extracting: show progress bar (indeterminate during enumeration) -->
                                        <StackPanel Visibility="{Binding IsExtracting, Converter={StaticResource BoolToVis}}">
                                            <ProgressBar Value="{Binding Progress}" Maximum="100"
                                                         IsIndeterminate="{Binding IsEnumerating}"
                                                         Height="8" Margin="0,0,0,3"
                                                         Foreground="{StaticResource AccentBrush}"
                                                         Background="#333"/>
                                            <TextBlock Text="{Binding StatusText}"
                                                       FontSize="10" Foreground="{StaticResource MutedBrush}"
                                                       HorizontalAlignment="Center"/>
                                            <!-- Current file during enumeration, throttled ~500 ms -->
                                            <TextBlock Text="{Binding EnumeratingFile}"
                                                       Visibility="{Binding IsEnumerating, Converter={StaticResource BoolToVis}}"
                                                       FontSize="9" FontFamily="Consolas, Courier New"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       HorizontalAlignment="Left"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"
                                                       ToolTip="{Binding EnumeratingFile}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Actions column -->
                        <GridViewColumn Header="Actions" Width="320">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4,4" VerticalAlignment="Center">
                                        <Button Content="Extract"
                                                Style="{StaticResource AccentButtonStyle}"
                                                IsEnabled="{Binding CanExtract}"
                                                Click="ExtractButton_Click"
                                                Tag="{Binding}"
                                                Margin="0,0,6,0" Width="80"/>

                                        <Button Content="Undo Extraction"
                                                Style="{StaticResource DangerButtonStyle}"
                                                IsEnabled="{Binding CanUndo}"
                                                Click="UndoButton_Click"
                                                Tag="{Binding}"
                                                Margin="0,0,6,0" Width="128"/>

                                        <Button Content="Cancel"
                                                Style="{StaticResource BaseButtonStyle}"
                                                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                                                Click="CancelButton_Click"
                                                Tag="{Binding}"
                                                Width="60"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <!-- Empty state -->
                <ListView.Style>
                    <Style TargetType="ListView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Items.Count, RelativeSource={RelativeSource Self}}" Value="0">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="No D2R installations added yet."
                                                           Foreground="{StaticResource MutedBrush}"
                                                           FontSize="14" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Click '+ Add Installation' below to get started."
                                                           Foreground="{StaticResource MutedBrush}"
                                                           FontSize="11" HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Style>
            </ListView>
        </Border>

        <!-- ══ Toolbar ══ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,8">
            <Button Content="+ Add Installation"
                    Style="{StaticResource BaseButtonStyle}"
                    Click="AddInstallation_Click"
                    Padding="14,6" Margin="0,0,8,0"/>
            <Button Content="Remove Selected"
                    Style="{StaticResource BaseButtonStyle}"
                    Click="RemoveInstallation_Click"
                    Padding="14,6" Margin="0,0,24,0"/>

            <!-- Separator -->
            <Border Width="1" Background="#444" Margin="0,2,24,2"/>

            <Button Content="Extract All"
                    Style="{StaticResource AccentButtonStyle}"
                    IsEnabled="{Binding CanExtractAll}"
                    Click="ExtractAll_Click"
                    Padding="14,6" Margin="0,0,8,0"
                    ToolTip="Extract all installations that have not yet been extracted"/>
            <Button Content="Undo All"
                    Style="{StaticResource DangerButtonStyle}"
                    IsEnabled="{Binding CanUndoAll}"
                    Click="UndoAll_Click"
                    Padding="14,6" Margin="0,0,24,0"
                    ToolTip="Undo extraction for all installations that have been extracted"/>

            <!-- Separator -->
            <Border Width="1" Background="#444" Margin="0,2,24,2"/>

            <Button Content="Cancel All"
                    Style="{StaticResource BaseButtonStyle}"
                    IsEnabled="{Binding CanCancelAll}"
                    Click="CancelAll_Click"
                    Padding="14,6"
                    ToolTip="Cancel all active extraction and undo operations"/>
        </StackPanel>

        <!-- ══ Log panel ══ -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Activity Log"
                           Foreground="{StaticResource MutedBrush}"
                           FontSize="11" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Button Content="Clear Log"
                        Style="{StaticResource BaseButtonStyle}"
                        Click="ClearLog_Click"
                        Width="68" Padding="4,2" FontSize="11"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#333" BorderThickness="1" CornerRadius="4"
                    Background="{StaticResource SurfaceBrush}">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         IsReadOnlyCaretVisible="True"
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Consolas, Courier New"
                         FontSize="11"
                         Foreground="{StaticResource MutedBrush}"
                         Padding="8"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         CaretBrush="{StaticResource MutedBrush}"
                         SelectionBrush="{StaticResource AccentBrush}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
